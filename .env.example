# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pcb_design
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# API Keys (Required for NLP features)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
APP_NAME=AI PCB Design Platform
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# ML Model Settings
MODEL_PATH=./models
CHECKPOINT_PATH=./checkpoints
DEVICE=cuda  # or 'cpu' if no GPU available

# RL Training Settings
RL_EPISODES=1000
RL_WORKERS=8
RL_LEARNING_RATE=0.0003
RL_BATCH_SIZE=256

# GNN Settings
GNN_HIDDEN_DIM=128
GNN_NUM_LAYERS=4
GNN_DROPOUT=0.1

# Routing Settings
MAX_ROUTING_TIME=300  # seconds
ROUTING_ALGORITHM=hybrid  # 'rl', 'astar', or 'hybrid'
COMPLEXITY_THRESHOLD=0.7

# DRC/ERC Settings
MIN_TRACE_WIDTH=0.15  # mm
MIN_CLEARANCE=0.15    # mm
MIN_VIA_SIZE=0.3      # mm

# File Storage
UPLOAD_DIR=./uploads
GENERATED_DESIGNS_DIR=./generated_designs
MAX_UPLOAD_SIZE=10485760  # 10MB

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Frontend
REACT_APP_API_URL=http://localhost:8000
