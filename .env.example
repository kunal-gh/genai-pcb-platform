# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/stuff_made_easy
REDIS_URL=redis://localhost:6379/0

# AI Service API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# File Storage
UPLOAD_DIR=./uploads
GENERATED_DESIGNS_DIR=./generated_designs
MAX_FILE_SIZE_MB=50

# KiCad Configuration
KICAD_PATH=/usr/bin/kicad
KICAD_LIBRARIES_PATH=/usr/share/kicad/library

# Simulation Settings
SPICE_SIMULATOR=ngspice
SIMULATION_TIMEOUT_SECONDS=300

# Component Database
COMPONENT_DB_UPDATE_INTERVAL_HOURS=24
OCTOPART_API_KEY=your_octopart_api_key_here
DIGIKEY_API_KEY=your_digikey_api_key_here

# Manufacturing Integration
JLCPCB_API_KEY=your_jlcpcb_api_key_here
PCBWAY_API_KEY=your_pcbway_api_key_here

# Monitoring
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=noreply@stuff-made-easy.com

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development